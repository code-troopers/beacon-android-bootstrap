<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.codetroopers.materialAndroidBootstrap">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />

    <application
        android:name="com.codetroopers.materialAndroidBootstrap.core.AndroidBootstrapApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.codetroopers.materialAndroidBootstrap.ui.activity.HomeActivity"
            android:label="@string/app_name">
        <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.codetroopers.materialAndroidBootstrap.ui.activity.SettingsActivity"
            android:label="@string/action_settings" />

        <!--Uncomment to add crashlytics-->
        <!--<meta-data-->
        <!--android:name="com.crashlytics.ApiKey"-->
        <!--android:value="<YOUR_KEY>" />-->
    </application>
</manifest>
